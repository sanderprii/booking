<!-- src/views/home.handlebars - Updated with clickable links -->
<div class="container mt-4">
    <h1>{{title}}</h1>

    <div class="row">
        {{#each accommodations}}
            <div class="col-md-4 mb-4">
                <a href="/listings/{{id}}" class="text-decoration-none">
                    <div class="card" data-testid="accommodation-listing" style="cursor: pointer;">
                        <img src="{{image}}" class="card-img-top" alt="{{title}}" data-testid="listing-image">
                        <div class="card-body">
                            <h5 class="card-title text-dark" data-testid="listing-title">{{title}}</h5>
                            <p class="card-text text-muted" data-testid="listing-description">{{description}}</p>
                            <p class="card-text"><strong class="text-dark" data-testid="listing-price">${{price}}/night</strong></p>
                        </div>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>